/* pages/enlist_manger/enlist_manger.wxss */

.enlist_manger {
  width: 100%;
  overflow-x: hidden;
  height: 100%;
}

.title {
  width: 100%;
  background-color: #fcd917;
  padding-left: 0.96rem;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.8rem;
  color: rgba(153, 153, 153, 1);
}

.list-item {
  width: 100%;
  border-bottom: 1px #f5f5f5 solid;
}

.list-item-img {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.list-item-extra {
  /* position: fixed; */
  width: 90%;
  text-align: left;
  border: 1px #fcd917 dashed;
  margin-left: 5%;
  background-color: #f5f5f5;
  border-radius: 0.5rem;
  letter-spacing: 0.1rem;
  margin-bottom: 0.9rem;
  font-size: 0.9rem;
}

.list-item-extra>view {
  padding-left: 0.9rem;
}

.list-item-msg {
  position: relative;
  width: 100%;
  display: -webkit-box; /* 老版本语法: Safari, iOS, Android browser, older WebKit browsers. */
  display: -moz-box; /* 老版本语法: Firefox (buggy) */
  display: -ms-flexbox; /* 混合版本语法: IE 10 */
  display: -webkit-flex; /* 新版本语法: Chrome 21+ */
  display: flex;
  -webkit-box-pack: center;
  -moz-justify-content: center;
  -webkit-justify-content: center;
  justify-content: center;
  align-items: center;
  padding: 0.5rem;
  font-size: 0.9rem;
}

.list-item-msg >image {
  width: 3rem;
  height: 3rem;
  vertical-align: middle;
  border-radius: 1.5rem;
  margin-right: 1rem;
}

.list-item-msg>view {
  width: 55%;
}

.letter-space {
  letter-spacing: 0.9rem;
}

.list-item-msg>button {
  width: 20%;
  height: 2rem;
  line-height: 2rem;
  margin-right: 0.9rem;
  background-color: #fcd917;
  color: white;
  font-size: 0.8rem;
}

.pass {
  width: 3rem;
  height: 3rem;
  margin-left: 1rem;
}
