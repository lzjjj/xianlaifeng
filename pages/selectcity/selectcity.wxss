/* pages/selectcity/selectcity.wxss */

.slelect_city {
  width: 100%;
  height: 600px;
  /* position: relative; */
}

.localcity, .city_character {
  height: 1.6rem;
  line-height: 1.6rem;
  padding-left: 3%;
  width: 100%;
  background-color: #f5f5f5;
  color: gray;
  font-size: 0.7rem;
  border-top: 1px solid gainsboro;
}

.city_box {
  border: 1px solid gainsboro;
  width: fit-content;
  padding-left: 9.5%;
  padding-right: 9.5%;
  text-align: center;
  height: 1.8rem;
  line-height: 1.8rem;
  border-radius: 0.2rem;
  font-size: 0.8rem;
  
}

.hot_city_content, .city_character_content {
  
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  border-top: 1px solid gainsboro;
   align-items: center; 
  /* justify-content: center; */
}


.character_box {
  width: 16.6%;
 text-align: center;
  height: 1.5rem;
  line-height: 1.5rem;
  font-size: 0.75rem;
  color: #fcd917;
}
