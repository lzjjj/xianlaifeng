.activity_head {
  height: 10%;
  display: flex;
  width: 100%;
  padding-top: 3%;
  padding-bottom: 3%;
  align-items: center;
  justify-content: center;
}

.img_down {
  width: 1.125rem;
  height:1.125rem;
  vertical-align: middle;
  margin-right: 0.475rem;
}

.activity_location {
  width: 23%;
  color: #fcd917;
  padding-left:1.0625rem;
}

.activity_input {
  width: 75%;
}

.activity_input input {
  width: 100%;
  background-color: rgba(245,245,245,1);
  height: 2.125rem;
   margin-left: -0.9375rem; 
  border-radius: 0.3125rem;
  /* padding-left: 10%;  */
}

.activity_content {
  /* width: 100%; */
  height: 85%;
  background-color: #f5f5f5;
  position: relative;
  overflow-x: hidden;
}

.activity_content_item {
  
}

.activity_content_item >image {
  width: 100%;
  height: 13.125rem;
  margin-top:0.6875rem;
}

.activity_content_item_title {
  background-color: white;
 color: rgba(51,51,51,1);
  padding-top: 2%;
  padding-left: 3%;
  font-family: PingFangSC-Semibold;
}
.activity_content_item_msg{
  display: flex;
  width: 100%;
