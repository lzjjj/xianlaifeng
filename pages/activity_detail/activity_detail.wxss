.activity {
  width: 100%;
  padding-bottom: 15%;
}

.activity_img {
  width: 100%;
  height: 13.18rem;
}

.activity_title {
  padding: 0.9375rem;
  font-weight: bolder;
  color: rgba(51, 51, 51, 1);
  font-size: 1.125rem;
}

.activity_detail_bottom {
  width: 100%;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0%;
  height: 2.5rem;
  overflow: hidden;
  z-index: 5;
  background-color: white;
  padding-top: 2%;
  padding-bottom: 2%;
}

.activity_detail_bottom_left {
  position: relative;
  width: 26%;
  text-align: center;
  border: 1px #fcd917 solid;
  border-radius: 0.2rem;
  line-height: 2.5rem;
  color: #fcd917;
  margin-left: 2%;
  margin-right: 2%;
}

.activity_detail_bottom_left>image {
  width: 1.1rem;
  height: 1.1rem;
  vertical-align: middle;
  margin-top: -3%;
  margin-right: 1%;
}

.activity_content {
  padding: 1.5%;
  font-size: 0.8rem;
}
.kefu_icon{
  position: absolute;
  top:25%;
    opacity: 0;  
}