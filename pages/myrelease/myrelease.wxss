/* pages/myrelease/myrelease.wxss */

.myrelease {
  width: 100%;
  height: 100%;
  background-color: rgba(245, 245, 245, 1);
  position: fixed;
}
.myrelease_head{
  border-top: 1px #F5F5F5 solid;
  display: flex;
  justify-content: center;
  align-items: center;
 
  background-color: white;
}
.myrelease_head>view{
   width:50%; 
  text-align: center;
  height: 2.5rem;
  line-height:3rem;
}
.title_actived{
  color:#FCD917;
  border-bottom: 1px #FCD917 solid;
}
.title_unactived{
  color:black;
  border-bottom:none;
}
.myrelease_item {
  margin-top: 0.65rem;
  width: 100%;
  background-color: rgba(255, 255, 255, 1);
  position: relative;
  /* height: 6.3125rem; */
}

.title {
  color: rgba(51, 51, 51, 1);
  padding-top: 0.9rem;
  padding-left: 0.93rem;
  font-size: 1rem;
  font-family: PingFangSC-Regular;
}

.msg {
  display: flex;
  padding-left: 0.93rem;
  padding-bottom: 0.84rem;
  border-bottom: 1px #f5f5f5 solid;
 font-size:0.75rem;
 color:rgba(153,153,153,1);
}
.msg text{
  color: #FCD917;
}
.msg>view:first-child{
  width:65%;
  
}
.msg>view:last-child{
  width:30%;
  text-align: right;
}


.option {
  display: -webkit-box; /* 老版本语法: Safari, iOS, Android browser, older WebKit browsers. */
  display: -moz-box; /* 老版本语法: Firefox (buggy) */
  display: -ms-flexbox; /* 混合版本语法: IE 10 */
  display: -webkit-flex; /* 新版本语法: Chrome 21+ */
  display: flex;
   -webkit-box-pack: center;
  -moz-justify-content: center;
  -webkit-justify-content: center;
  justify-content: center; 
  padding-top:0.6rem;
   padding-bottom:0.6rem;
   text-align: center;
}
.option_left{
  width: 32%;
  color: rgba(233,101,101,1);
}
.option_middle{
   /* padding-right: 1rem; */
  color: #FCD917;
  width: 32%;
}
.option_right{
  width: 32%;
  color: rgba(51,51,51,1);
}
.vertical-line{
/* height:1.2rem; */
width:0;
border-right:1px #F5F5F5 solid; 
}
.offselve_img{
  width: 3rem;
  height:3rem;
  position: absolute;
  right: 0%;
  top: 0%;
}
.offselve_title{
color: #8a8a8a;
}
