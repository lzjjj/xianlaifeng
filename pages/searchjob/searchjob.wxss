/* pages/searchjob/searchjob.wxss */

.search {
  width: 100%;
  height: 100%;
}

.search_head {
  width: 100%;
  height: 10%;
  background-color: #fcd917;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  z-index: 2;
}

.search_head_left {
  width: 80%;
}

.search_head_left>input {
  width: 88%;
  background-color: white;
  height: 1.8rem;
  border-radius: 0.2rem;
  padding-left: 10%;
  color: gray;
}

.search_head_right {
   /* width: 10%;  */
  text-align: center;
  color: gray;
  margin-left: 2%;
}

.search_activity_img {
  z-index: 2;
  position: fixed;
  margin-top: 2.3%;
  margin-left: 2%;
  
}

.search_record {
  padding-top: 18%;
  width: 95%;
  height: auto;
  padding-left: 5%;
  color: gray;
}

.search_content {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.search_content>view {
  /* align-content: space-between; */
  border: 1px solid gray;
  width: fit-content;
  padding-left: 2%;
  padding-right: 2%;
  text-align: center;
  height: 1.5rem;
  line-height: 1.5rem;
  margin-right: 3%;
  margin-top: 3%;
  border-radius: 0.2rem;
  font-size: 0.8rem;
}

.clear_img {
  z-index: 2;
  position: fixed;
  margin-top: 2.2%;
  margin-left: 73%;
}
.activity_content_item >image {
  width: 100%;
  height: 13rem;
  margin-top: 3%;
}

.activity_content_item_title {
  background-color: white;
  margin-top: -2%;
  padding-top: 2%;
  padding-left: 3%;
}
.activity_content_item_msg{
  display: flex;
  width: 100%;
  background-color: white;
  padding-left: 1%;
  color: gray;
font-size: 0.8rem;
}
.job_item {
  border-bottom: 1px #f5f5f5 solid;
  padding-bottom: 0.6rem;
}

.job_item_top {
  display: flex;
  width: 100%;
  padding-top: 0.65rem;
}

.job_item_top_left {
  font-family: PingFangSC-Semibold;
  color: rgba(51, 51, 51, 1);
  font-size: 1.1rem;
  width: 60%;
  text-align: left;
  padding-left: 0.625rem;
}

.job_item_top_right {
  color: rgba(250, 145, 42, 1);
  font-size: 1.1rem;
  font-family: SF UI Text;
  width: 36%;
  text-align: right;
  padding-right: 0.625rem;
}
.job_item_middle{
font-size:0.8rem;color:rgba(153,153,153,1);padding-left:0.625rem;
}
.job_item_bottom{
  display:flex;width:100%;color:rgba(153,153,153,1);
}

.job_item_bottom_left{
font-family:PingFangSC-Semibold;font-size:0.8rem;width:60%;text-align:left;padding-left:0.625rem
}
.job_item_bottom_right{
  width:36%;text-align:right;padding-right:0.625rem
}
