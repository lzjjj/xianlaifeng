/* pages/searchjob/searchjob.wxss */

.search {
  width: 100%;
  height: 100%;
}

.search_head {
  width: 100%;
  height: 10%;
  background-color: #fcd917;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  z-index: 2;
}

.search_head_left {
  width: 80%;
}

.search_head_left>input {
  width: 90%;
  background-color: white;
  height: 1.8rem;
  border-radius: 0.2rem;
  padding-left: 10%;
  color: gray;
}

.search_head_right {
  /* width: 10%; */
  text-align: center;
  color: gray;
  margin-left: 2%;
}

.search_activity_img {
  z-index: 2;
  position: fixed;
  margin-top: 2.2%;
  margin-left: 1%;
}

.search_record {
  padding-top: 18%;
  width: 100%;
  height: auto;
  padding-left: 5%;
  color: gray;
}

.search_content {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.search_content>view {
  /* align-content: space-between; */
  border: 1px solid gray;
  width: fit-content;
  padding-left: 2%;
  padding-right: 2%;
  text-align: center;
  height: 1.5rem;
  line-height: 1.5rem;
  margin-right: 3%;
  margin-top: 3%;
  border-radius: 0.2rem;
  font-size: 0.8rem;
}

.clear_img {
  z-index: 2;
  position: fixed;
  margin-top: 2.2%;
  margin-left: 73%;
}

.schoo_name {
  padding: 3%;
  border-bottom: 1px #f5f5f5 solid;
  color: gray;
  font-size: 0.9rem;
}
